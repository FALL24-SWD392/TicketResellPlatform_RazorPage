@page "/Manager"
@model Views.Pages.Manager.IndexModel
@{
    ViewBag.Title = "Users Manager";
    Layout = "_Manager";
}
<div class="w-100 h-100">
    <div class="container-xl">
        <div class="d-flex justify-content-center align-items-center pb-3 border-bottom">
            <form class="w-50">
                <div class="row m-0 justify-content-center align-items-center">
                    <div class="col-10 p-0">
                        <input type="text" class="form-control rounded-end-0 rounded-start-pill" style="font-size: 1.6rem;" placeholder="Search" />
                    </div>
                    <div class="col-2 p-0">
                        <button type="submit" class="btn btn-dark w-100 d-block rounded-start-0 rounded-end-pill" style="font-size:1.6rem;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-search" viewBox="0 0 16 16">
                                <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                            </svg>
                        </button>
                    </div>
                </div>
            </form>
        </div>
        <div class="w-100 p-3">
            <table class="table table-secondary table-striped table-borderless">
                <thead>
                    <tr>
                        <th scope="col">ID</th>
                        <th scope="col">Avatar</th>
                        <th scope="col">Username</th>
                        <th scope="col">Email</th>
                        <th scope="col">Role</th>
                        <th scope="col">Status</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in Model.Users)
                    {
                        <tr>
                            <td>@item.Id</td>
                            <td>
                                <img src="@item.Avatar" class="rounded-circle" style="width: 50px; height: 50px;" />
                            </td>
                            <td>@item.Username</td>
                            <td>@item.Email</td>
                            <td>@item.Role</td>
                            <td>@item.Status</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


