@page
@model Views.Pages.FeedbackPage.IndexModel

@{
    ViewData["Title"] = "Feedback";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="mt-4">@ViewData["Title"]</h1>

<div class="mb-3">
    <a asp-page="Create" class="btn btn-dark btn-hover">+ Add New Feedback</a>
</div>

<div class="table-responsive">
    <table class="table table-bordered table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th>@Html.DisplayNameFor(model => model.Feedback[0].Order.ChatBox.Buyer)</th>
                <th>@Html.DisplayNameFor(model => model.Feedback[0].Order.ChatBox.Seller)</th>
                <th>@Html.DisplayNameFor(model => model.Feedback[0].Message)</th>
                <th>@Html.DisplayNameFor(model => model.Feedback[0].Rating)</th>
                <th>@Html.DisplayNameFor(model => model.Feedback[0].CreateAt)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Feedback)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Order.ChatBox.Buyer.Username)</td>
                    <td>@Html.DisplayFor(modelItem => item.Order.ChatBox.Seller.Username)</td>
                    <td>@Html.DisplayFor(modelItem => item.Message)</td>
                    <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                    <td>@Html.DisplayFor(modelItem => item.CreateAt)</td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .btn-hover {
        transition: all 0.3s ease-in-out;
    }

        .btn-hover:hover {
            background-color: #fff; /* White background on hover */
            color: #000; /* Black text color */
            border: 1px solid #000; /* Optional: Adds a black border */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Add a shadow */
            transform: scale(1.05); /* Slight zoom-in effect */
        }
</style>