@page 
@model Views.Pages.TicketDetailsPageModel

@{
    ViewData["Title"] = "TicketDetailsPage";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid w-80 mx-auto" style="height: 100%">
    <div class="row">
        <nav class="col-md-3 col-lg-2 d-none d-md-block bg-light sidebar" style="border-right: 2px solid #ddd; height: 100%; box-shadow: none;">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/HomePage" style="font-size: 1.6rem; padding: 10px; border-radius: 5px; transition: background-color 0.3s; color: black;">
                            Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/ProfilePage" style="font-size: 1.6rem; padding: 10px; border-radius: 5px; transition: background-color 0.3s; color: black;">
                            Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-page="/MyTicketsPage" style="font-size: 1.6rem; background-color: #000; color: white; border-radius: 5px; padding: 10px;">
                            My Tickets
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/MyChatsPage" style="font-size: 1.6rem; padding: 10px; border-radius: 5px; transition: background-color 0.3s; color: black;">
                            My Chats
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/MyOrdersPage" style="font-size: 1.6rem; padding: 10px; border-radius: 5px; transition: background-color 0.3s; color: black;">
                            My Orders
                        </a>
                    </li>
                </ul>
            </div>
        </nav>

        <main class="col-md-11 ml-sm-auto col-lg-10 px-md-4">
            <h1>Ticket Details</h1>

            <div class="container mt-5">
                <div class="card shadow-sm">
                    <div class="container mt-5">
                        <div class="card shadow-lg border-0 mb-4" style="border-radius: 15px;">
                            <div class="card-body p-5">
                                <img src="@Model.Ticket.Image" class="card-img-top" style="height: 25rem; object-fit: cover;" />
                                <dl class="row text-secondary mb-4">
                                    <dt class="col-sm-4 font-weight-bold text-dark">
                                        @Html.DisplayNameFor(model => model.Ticket.Title)
                                    </dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Ticket.Title)</dd>

                                    <dt class="col-sm-4 font-weight-bold text-dark">
                                        @Html.DisplayNameFor(model => model.Ticket.Description)
                                    </dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Ticket.Description)</dd>

                                    <dt class="col-sm-4 font-weight-bold text-dark">
                                        @Html.DisplayNameFor(model => model.Ticket.Price)
                                    </dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Ticket.Price)</dd>

                                    <dt class="col-sm-4 font-weight-bold text-dark">
                                        @Html.DisplayNameFor(model => model.Ticket.Quantity)
                                    </dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Ticket.Quantity)</dd>

                                    <dt class="col-sm-4 font-weight-bold text-dark">
                                        Expiry Date
                                    </dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Ticket.ExpiryDate)</dd>

                                    <dt class="col-sm-4 font-weight-bold text-dark">
                                        @Html.DisplayNameFor(model => model.Ticket.Owner)
                                    </dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Ticket.Owner.Username)</dd>

                                    <dt class="col-sm-4 font-weight-bold text-dark">
                                        @Html.DisplayNameFor(model => model.Ticket.Type)
                                    </dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Ticket.Type.Type)</dd>

                                    <dt class="col-sm-4 font-weight-bold text-dark">
                                        @Html.DisplayNameFor(model => model.Ticket.Status)
                                    </dt>
                                    <dd class="col-sm-8">@Html.DisplayFor(model => model.Ticket.Status.Status)</dd>
                                </dl>
                            </div>

                            <div class="eow d-flex justify-content-end align-content-center w-30 mb-3 me-3">
                                <div class="col-1 me-2">
                                    <a asp-page="EditTicketPage" asp-route-id="@Model.Ticket.Id" class="btn btn-dark w-100" style="font-size: 1.6rem;">Edit</a>

                                </div>
                                <div class="col-1 me-2">
                                    <a asp-page="DeleteTicketPage" asp-route-id="@Model.Ticket.Id" class="btn btn-dark w-100" style="font-size: 1.6rem;">Delete</a>

                                </div>
                                <div class="col-1">
                                    <a asp-page="MyTicketsPage" class="btn btn-dark w-100" style="font-size: 1.6rem;">Back</a>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<style>
    .btn:hover {
        opacity: 0.8;
        background-color: white !important;
        color: black !important;
    }

    .nav-link.active {
        background-color: #000;
        color: white;
    }

    .nav-link, h1, .card-title {
        color: black;
    }

    .nav-link:hover {
        background-color: lightgray;
    }
</style>