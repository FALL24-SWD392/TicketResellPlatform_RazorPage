@page
@model Views.Pages.ReportPage.DetailsModel

@{
    ViewData["Title"] = "Report Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="mt-4">@ViewData["Title"]</h1>

<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <h4 class="card-title">Report Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Sender</dt>
            <dd class="col-sm-9">
                @if (Model.Report.SenderId == Model.Report.Order.ChatBox.SellerId)
                {
                    @Html.DisplayFor(model => model.Report.Order.ChatBox.Seller.Username)
                }
                else
                {
                    @Html.DisplayFor(model => model.Report.Order.ChatBox.Buyer.Username)
                }
            </dd>

            <dt class="col-sm-3">Reported User</dt>
            <dd class="col-sm-9">
                @if (Model.Report.SenderId != Model.Report.Order.ChatBox.SellerId)
                {
                    @Html.DisplayFor(model => model.Report.Order.ChatBox.Seller.Username)
                }
                else
                {
                    @Html.DisplayFor(model => model.Report.Order.ChatBox.Buyer.Username)
                }
            </dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Report.Message)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Report.Message)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Report.Evidence)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Report.Evidence)</dd>

            <dt class="col-sm-3">Order Id</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Report.OrderId)</dd>

            <dt class="col-sm-3">Order Quantity</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Report.Order.Quantity)</dd>

            <dt class="col-sm-3">Order Created At</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Report.Order.CreateAt)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Report.Status.Status)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Report.Status.Status)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Report.CreateAt)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Report.CreateAt)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Report.UpdateAt)</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Report.UpdateAt)</dd>
        </dl>
    </div>
</div>

<div class="mb-3">
    <form method="post">
        <input type="hidden" asp-for="Report.Id" />
        <div class="form-group mb-4">
            <input type="submit" value="Approved" name="status" class="btn btn-dark btn-lg btn-hover" />
        </div>
        <div class="form-group mb-4">
            <input type="submit" value="Rejected" name="status" class="btn btn-dark btn-lg btn-hover" />
        </div>
    </form>
    <a asp-page="./Index" class="btn btn-lg btn-dark btn-hover">Back to List</a>
</div>

<style>
    .btn-hover {
        transition: all 0.3s ease-in-out;
    }

        .btn-hover:hover {
            background-color: #fff; /* White background on hover */
            color: #000; /* Black text color */
            border: 1px solid #000; /* Optional: Adds a black border */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Add a shadow */
            transform: scale(1.05); /* Slight zoom-in effect */
        }
</style>