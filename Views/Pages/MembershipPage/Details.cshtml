@page
@model Views.Pages.MembershipPage.DetailsModel

@{
    ViewData["Title"] = "Membership Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1 class="mt-4 text-dark">@ViewData["Title"]</h1>

<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <h4 class="card-title">Membership Information</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-3">Order Code</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Membership.OrderCode)
            </dd>
            <dt class="col-sm-3">Subscription Name</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Membership.Supscription.Name)
            </dd>
            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Membership.Supscription.Description)
            </dd>
            <dt class="col-sm-3">Sale Limit</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Membership.Supscription.SaleLimit)
            </dd>
            <dt class="col-sm-3">Price</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Membership.Supscription.Price)
            </dd>
            <dt class="col-sm-3">Start Date</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Membership.StartDate)
            </dd>
            <dt class="col-sm-3">End Date</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Membership.EndDate)
            </dd>
            <dt class="col-sm-3">Status</dt>
            <dd class="col-sm-9">
                @Html.DisplayFor(model => model.Membership.Status.Status)
            </dd>
        </dl>
    </div>
</div>

<div class="mb-3">
    <a asp-page="Index" class="btn btn-lg btn-dark btn-hover">Back to List</a>
</div>

<style>
    .btn-hover {
        transition: all 0.3s ease-in-out;
    }

        .btn-hover:hover {
            background-color: #fff; /* White background on hover */
            color: #000; /* Black text color */
            border: 1px solid #000; /* Optional: Adds a black border */
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2); /* Add a shadow */
            transform: scale(1.05); /* Slight zoom-in effect */
        }

    h1 {
        color: #343a40; /* Dark gray */
    }

    .card-title {
        font-weight: bold;
        color: #495057; /* Slightly lighter gray */
    }
</style>
