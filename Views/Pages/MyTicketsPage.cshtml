@page
@model Views.Pages.MyTicketsPageModel

@{
    ViewData["Title"] = "MyTicketsPage";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<div class="container-fluid w-80 mx-auto" style="height: 100%">
    <div class="row">
        <nav class="col-md-3 col-lg-2 d-none d-md-block bg-light sidebar" style="border-right: 2px solid #ddd; height: 100%; box-shadow: none;">
            <div class="position-sticky pt-3">
                <ul class="nav flex-column">
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/HomePage" style="font-size: 1.6rem; padding: 10px; border-radius: 5px; transition: background-color 0.3s; color: black;">
                            Home
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/ProfilePage" style="font-size: 1.6rem; padding: 10px; border-radius: 5px; transition: background-color 0.3s; color: black;">
                            Profile
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link active" asp-page="/MyTicketsPage" style="font-size: 1.6rem; background-color: #000; color: white; border-radius: 5px; padding: 10px;">
                            My Tickets
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/MyChatsPage" style="font-size: 1.6rem; padding: 10px; border-radius: 5px; transition: background-color 0.3s; color: black;">
                            My Chats
                        </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-page="/MyOrdersPage" style="font-size: 1.6rem; padding: 10px; border-radius: 5px; transition: background-color 0.3s; color: black;">
                            My Orders
                        </a>
                    </li>
                </ul>
            </div>
        </nav>


        <main class="col-md-9 ml-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between">
                <h1 style="margin: 15px 0; padding: 0 15px; color: black;">My Tickets</h1>
                <a style="font-size: 1.6rem; padding: 10px 20px; border-radius: 5px; transition: background-color 0.3s; display: inline-flex; justify-content: center; align-items: center; margin: 15px 0; background-color: #000; color: white;" asp-page="CreateTicketPage" class="btn btn-dark btn-sm">
                    Create New
                </a>
            </div>
            <div class="container my-4">
                <div class="row d-flex flex-wrap justify-content-start">
                    @foreach (var item in Model.Ticket)
                    {
                        <div class="col-3 mb-4 text-black fs-3 font-bold">
                            <div class="card w-100">
                                <img src="@item.Image" class="card-img-top" style="height: 25rem; object-fit: cover;" />
                                <div class="card-body">
                                    <p class="card-title fw-bold text-capitalize">@item.Title</p>
                                    <p class="card-text" style="text-align: justify; max-height: 5rem; overflow:hidden;">
                                        @item.Description
                                    </p>
                                    <div class="row d-flex justify-content-between align-items-center">
                                        <p class="col-6 card-text text-start">Price: @item.Price</p>
                                        <p class="col-6 card-text text-end">Quantity: @item.Quantity</p>
                                    </div>
                                    <p class="card-text">Valid until: @item.ExpiryDate</p>
                                    <div class="row d-flex justify-content-between align-items-center">
                                        <div class="col-6">
                                            <a asp-page="/EditTicketPage" asp-route-id="@item.Id" type="button" class="btn btn-dark w-100 text-white"
                                               style="font-size: 1.6rem;">Edit</a>

                                        </div>
                                        <div class="col-6">
                                            <a asp-page="/TicketDetailsPage" asp-route-id="@item.Id" type="button" class="btn btn-dark w-100 text-white"
                                               style="font-size: 1.6rem;">View details</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </main>
    </div>
</div>

<style>
    .btn:hover {
        opacity: 0.8;
        background-color: white !important;
        color: black !important; 
    }

    .nav-link.active {
        background-color: #000;
        color: white;
    }

    .nav-link, h1, .card-title {
        color: black;
    }

    .nav-link:hover {
        background-color: lightgray;
    }
</style>


