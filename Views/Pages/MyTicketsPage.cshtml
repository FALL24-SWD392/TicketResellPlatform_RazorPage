@page "/MyTickets"
@model Views.Pages.MyTicketsPageModel
@{
    ViewData["Title"] = "MyTicketsPage";
    Layout = "_Layout";

}
<div class="container-xl w-80 mx-auto" style="height: 100%">
    <div class="d-flex justify-content-between">
        <h1 style="margin: 15px 0; padding: 0 15px; color: black;">My Tickets</h1>
        <a href="/Tickets/Create" style="font-size: 1.6rem; padding: 10px 20px; border-radius: 5px; transition: background-color 0.3s; display: inline-flex; justify-content: center; align-items: center; margin: 15px 0; background-color: #000; color: white;"class="btn btn-dark btn-sm">
            Create New
        </a>
    </div>
    <div class="container-xl">
        <div class="row">
            @foreach (var item in Model.Ticket)
            {
                <div class="col-3 mb-4 text-black fs-3 font-bold">
                    <div class="card w-100">
                        <img src="@item.Image" class="card-img-top" style="height: 25rem; object-fit: cover;" />
                        <div class="card-body">
                            <p class="card-title fw-bold text-capitalize">@item.Title</p>
                            <p class="card-text" style="text-align: justify; max-height: 5rem; overflow:hidden;">
                                @item.Description
                            </p>
                            <div class="row d-flex justify-content-between align-items-center">
                                <p class="col-6 card-text text-start">Price: @item.Price</p>
                                <p class="col-6 card-text text-end">Quantity: @item.Quantity</p>
                            </div>
                            <p class="card-text">Valid until: @item.ExpiryDate</p>
                            <div class="row d-flex justify-content-between align-items-center">
                                <div class="col-6">
                                    <a href="/Ticket/@item.Id/Edit" type="button" class="btn btn-dark w-100 text-white"
                                       style="font-size: 1.6rem;">Edit</a>
                                </div>
                                <div class="col-6">
                                    <a asp-page="/Tickets/@item.Id" asp-route-id="@item.Id" type="button" class="btn btn-dark w-100 text-white"
                                       style="font-size: 1.6rem;">View details</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>


