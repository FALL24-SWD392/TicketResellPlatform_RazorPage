@page "/"
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = "_Layout";
}
</style>
<div class="h-100 container d-flex flex-column">
    <div class="w-100 overflow-hidden shadow-lg" style="border-radius: 2rem;">
        <img src="~/images/static/banner.jpg" class="d-block w-100 h-100" alt="banner">
    </div>
    <div class="my-3">
        <div class='d-flex justify-content-center gap-5 mb-3'>
            <div style="width: 20px">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1"
                    stroke="currentColor" class="w-100 text-primary">
                    <path stroke-linecap="round" stroke-linejoin="round"
                        d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z" />
                </svg>
            </div>
            <span class="fs-3">The safest way to buy and sell tickets with over 10 million fan</span>
        </div>
        <div class='d-flex justify-content-center gap-5 mb-3'>
            <div style="width: 20px">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1"
                    stroke="currentColor" class="w-100 text-primary">
                    <path stroke-linecap="round" stroke-linejoin="round"
                        d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z" />
                </svg>
            </div>
            <span class="fs-3">Prices are capped at 20% above face value</span>
        </div>
        <div class='d-flex justify-content-center gap-5 mb-3'>
            <div style="width: 20px">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1"
                    stroke="currentColor" class="w-100 text-primary">
                    <path stroke-linecap="round" stroke-linejoin="round"
                        d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z" />
                </svg>
            </div>
            <span class="fs-3">Primary tickets from over 6000 partnered events</span>
        </div>
    </div>
    <div class="d-flex justify-content-center py-3">
<form method="post" class="w-75 row justify-content-center">
        <div class="d-block col-8 p-0">
        <input type="text" class=" d-block form-control mx-auto rounded-start-pill" placeholder="Search for tickets" style="font-size: 1.6rem"/>
        </div>
        <button type="submit" class=" col-4 d-block btn btn-dark rounded-end-pill" style="font-size: 1.6rem;">Serach</button>
    </form>
    </div>
        <div class="container-xl d-flex flex-row flex-wrap">
            <div class="row">
                @foreach (var item in Model.Tickets)
                {
                    <div class="col-3 mb-4 text-black fs-3 font-bold">
                        <div class="card w-100 shadow">
                            <img src="@item.Image" class="card-img-top" style="height: 25rem; object-fit: cover;" />
                            <div class="card-body fs-4 text-secondary">
                                <p class="card-title fw-bold text-capitalize text-dark" style="text-align: justify">
                                    @item.Title</p>
                                <p class="card-text w-100" style="text-align: justify;">@item.Description</p>
                                <p class="card-text w-100 d-flex w-100 align-items-center justify-content-between"
                                    style="text-align: justify;">Price:
                                    <span class="badge border border-success text-success">@item.Price.ToString("#,##0 VNĐ")</span>
                                </p>
                                <p class="card-text w-100 d-flex w-100 align-items-center justify-content-between"
                                    style="text-align: justify;">Quantity:
                                    <span class="badge border border-warning text-warning">@item.Quantity</span>
                                </p>
                                <p class="card-text w-100 d-flex w-100 align-items-center justify-content-between"
                                    style="text-align: justify;">Valid until:
                                    <span class="badge border border-danger text-danger">@item.ExpiryDate</span>
                                </p>
                                <a href="/Tickets/@item.Id" type="button"
                                    class="btn btn-outline-dark w-100"
                                    style="font-size: 1.6rem; &:hover{color:white !important}">View details</a>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div class="w-100 d-flex justify-content-center py-3">
                <div class="w-75">
                    <a href="/Tickets" type="button" class="btn btn-outline-dark fs-3 w-100 rounded-pill">View more tickets</a>
                </div>
            </div>
        </div>
    </div>

</div>