@page "/"
@model IndexModel
@{
    ViewData["Title"] = "Home page";
    Layout = "_Layout";
}
<style>
    .banner{
        margin-top: 20px;
        margin-bottom: 20px;
        height: 550px;
    }
    .banner img{
        width: 100%;
        height: 100%;
        border-radius: 15px;
    }
    .text-hover{
        border-radius: 10px;
        transition: all 0.3s;    
    }
    .text-hover:hover{
        background: #F4F6FF;
        color: white;
        cursor: pointer;
    }
    
</style>
<div class="h-100 container d-flex flex-column">
    <div class="banner ">
        <img src="~/images/static/banner.jpg" class="shadow-lg" alt="banner">
    </div>
    <div class="mt-2">
        <div class='d-flex justify-content-center gap-5 mb-3'>
            <div style="width: 20px">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-100 text-primary">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z"/>
                </svg>
            </div>
            <span class="fs-3">The safest way to buy and sell tickets with over 10 million fan</span>
        </div>
        <div class='d-flex justify-content-center gap-5 mb-3'>
            <div style="width: 20px">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-100 text-primary">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z"/>
                </svg>
            </div>
            <span class="fs-3">Prices are capped at 20% above face value</span>
        </div>
        <div class='d-flex justify-content-center gap-5 mb-3'>
            <div style="width: 20px">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1" stroke="currentColor" class="w-100 text-primary">
                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 12.75 11.25 15 15 9.75m-3-7.036A11.959 11.959 0 0 1 3.598 6 11.99 11.99 0 0 0 3 9.749c0 5.592 3.824 10.29 9 11.623 5.176-1.332 9-6.03 9-11.622 0-1.31-.21-2.571-.598-3.751h-.152c-3.196 0-6.1-1.248-8.25-3.285Z"/>
                </svg>
            </div>
            <span class="fs-3">Primary tickets from over 6000 partnered events</span>
        </div>
    </div>
    <div class="container-xl mt-5">
        <div class="d-flex flex-row justify-content-between align-content-center" style="height: 40px">
            <p class="fs-1 fw-bold">Find ticket with</p>
            <div class="input-group rounded w-25 ">
                <input type="search" class="form-control rounded" placeholder="Search" aria-label="Search" aria-describedby="search-addon"/>
                <button class="input-group-text " style="width: 40px;">
                    <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-100">
                        <path stroke-linecap="round" stroke-linejoin="round" d="m21 21-5.197-5.197m0 0A7.5 7.5 0 1 0 5.196 5.196a7.5 7.5 0 0 0 10.607 10.607Z"/>
                    </svg>
                </button>
            </div>
        </div>
        <div class="row mt-4 row-cols-1 row-cols-md-2 row-cols-xl-4 g-3">
            <div class="col">
                <div class="d-flex align-items-center justify-content-between shadow-lg border-opacity-70 p-3 text-hover">
                    <p class="mb-0 fs-3 fw-bold ">Music</p>
                    <div style="width: 20px">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" strokeWidth={1.5} stroke="currentColor" class="w-100" style="color: deeppink;">
                            <path strokeLinecap="round" strokeLinejoin="round" d="m9 9 10.5-3m0 6.553v3.75a2.25 2.25 0 0 1-1.632 2.163l-1.32.377a1.803 1.803 0 1 1-.99-3.467l2.31-.66a2.25 2.25 0 0 0 1.632-2.163Zm0 0V2.25L9 5.25v10.303m0 0v3.75a2.25 2.25 0 0 1-1.632 2.163l-1.32.377a1.803 1.803 0 0 1-.99-3.467l2.31-.66A2.25 2.25 0 0 0 9 15.553Z"/>
                        </svg>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="d-flex align-items-center justify-content-between shadow-lg border-opacity-70  p-3 text-hover">
                    <p class="mb-0 fs-3 fw-bold ">Voucher</p>
                    <div style="width: 20px">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-100" style="color: red">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M16.5 6v.75m0 3v.75m0 3v.75m0 3V18m-9-5.25h5.25M7.5 15h3M3.375 5.25c-.621 0-1.125.504-1.125 1.125v3.026a2.999 2.999 0 0 1 0 5.198v3.026c0 .621.504 1.125 1.125 1.125h17.25c.621 0 1.125-.504 1.125-1.125v-3.026a2.999 2.999 0 0 1 0-5.198V6.375c0-.621-.504-1.125-1.125-1.125H3.375Z"/>
                        </svg>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="d-flex align-items-center justify-content-between shadow-lg border-opacity-70  p-3 text-hover">
                    <p class="mb-0 fs-3 fw-bold ">Event</p>
                    <div style="width: 20px">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-100" style="color: coral">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z"/>
                        </svg>

                    </div>
                </div>
            </div>
            <div class="col">
                <div class="d-flex align-items-center justify-content-between shadow-lg border-opacity-70  p-3 text-hover">
                    <p class="mb-0 fs-3 fw-bold ">Cinema</p>
                    <div style="width: 20px">
                        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-100" style="color: #0c63e4">
                            <path stroke-linecap="round" stroke-linejoin="round" d="M6.75 3v2.25M17.25 3v2.25M3 18.75V7.5a2.25 2.25 0 0 1 2.25-2.25h13.5A2.25 2.25 0 0 1 21 7.5v11.25m-18 0A2.25 2.25 0 0 0 5.25 21h13.5A2.25 2.25 0 0 0 21 18.75m-18 0v-7.5A2.25 2.25 0 0 1 5.25 9h13.5A2.25 2.25 0 0 1 21 11.25v7.5m-9-6h.008v.008H12v-.008ZM12 15h.008v.008H12V15Zm0 2.25h.008v.008H12v-.008ZM9.75 15h.008v.008H9.75V15Zm0 2.25h.008v.008H9.75v-.008ZM7.5 15h.008v.008H7.5V15Zm0 2.25h.008v.008H7.5v-.008Zm6.75-4.5h.008v.008h-.008v-.008Zm0 2.25h.008v.008h-.008V15Zm0 2.25h.008v.008h-.008v-.008Zm2.25-4.5h.008v.008H16.5v-.008Zm0 2.25h.008v.008H16.5V15Z"/>
                        </svg>
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex flex-row flex-wrap mb-5 justify-content-between align-content-center">
            @foreach (var item in Model.Tickets)
            {
                <div class="mt-5">
                    <div class="shadow-lg p-3" style="border-radius: 10px; width: 300px; height:auto">
                        <div class="img-thumbnail">
                            <img src="@item.Image" class="w-100" alt="">
                        </div>
                        <div class="content mt-4 d-flex justify-content-between">
                            <p class="fs-4 fw-bold">@item.Title</p>
                            <p class="fs-4 fw-bold">Price: @item.Price</p>
                        </div>
                        <div class="description">
                            <p>@item.Description</p>
                            <p>@item.ExpiryDate</p>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-primary fs-4">Buy Now</button>
                        </div>
                    </div>

                </div>
            }

        </div>
    </div>

</div>